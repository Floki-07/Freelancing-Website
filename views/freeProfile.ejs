<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Freelancer Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-800 text-white">
  <!-- Navbar -->
  <%- include('partials/freenavbar') %>

  <!-- Profile Section -->
  <section class="p-8">
    <h1 class="text-2xl font-bold mb-6">Your Profile</h1>
    
    <div class="bg-zinc-700 p-8 rounded-lg shadow-lg flex gap-8">
      <!-- Profile Image -->
      <img src="/images/default.jpg" alt="Freelancer Profile Picture" class="w-40 h-40 rounded-full border-4 border-blue-600">
      
      <!-- Profile Information -->
      <div>
        <h2 class="text-3xl font-bold text-gray-200"><%=user.name  %></h2>
        <p class="text-gray-400 mt-2"><%= user.email %></p>
        <p class="text-gray-400 mt-2"><%= user.exp %> Years</p>
        <p class="text-gray-400 mt-2"><%=user.desc %></p>
        
        <!-- Skills Section -->
        <div class="mt-6">
          <h3 class="text-xl font-semibold text-gray-300 mb-4">Skills</h3>
          <div class="flex gap-4">
              <% user.skills.forEach(skill => { %>
                  <span class="bg-blue-600 text-white py-2 px-4 rounded-full text-sm"><%= skill %></span>
              <% }) %>
          </div>
      </div>
      </div>
    </div>
  </section>
</body>
</html>
